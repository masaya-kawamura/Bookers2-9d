<% books.each do |book| %>
  <tr>
    <td><%= link_to user_path(book.user) do %>
      <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
      <% end %>
    </td>
    <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
    <td><%= book.body %></td>
    <td><%= link_to book.category, book_search_path(keyword: book.category) %></td>
    <td id="favorites_btn_<%= book.id %>">
      <%= render "favorites/favorite", book: book %>
    </td>
    <td>コメント数：<%= book.comments.count %></td>
    <td>閲覧数：<%= book.impressionist_count(:filter=>:session_hash) %></td>
    <td>
     <div id="rate_<%= book.id %>"></div>
      <script>
        $('#rate_<%= book.id %>').raty({
          size: 20,
          starOff: '<%= asset_path('star-off.png') %>',
          starOn:  '<%= asset_path('star-on.png') %>',
          starHalf:'<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
          score: <%= book.rate %>
        });
      </script>
    </td>
  </tr>
<% end %>